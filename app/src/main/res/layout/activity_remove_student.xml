<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:padding="24dp"
        tools:context=".activities.admin.RemoveStudentActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="REMOVE STUDENT"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorSecondary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_remove_student_enroll_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enrollment Number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/activity_remove_student_enroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:singleLine="true"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/activity_remove_student_textview"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/activity_remove_student_cancelStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="24dp"/>
    <Button
        android:id="@+id/activity_remove_student_removeStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REMOVE"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="24dp"/>
</LinearLayout>
</LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

