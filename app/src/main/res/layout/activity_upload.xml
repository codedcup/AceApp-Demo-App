<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:padding="24dp"
        tools:context=".activities.common.UploadActivity">

        <TextView
            android:id="@+id/activity_upload_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="ADD NOTICE"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/colorSecondary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="450dp"
              android:id="@+id/activity_upload_imageview"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/activity_upload_choose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Choose"
                        android:textSize="16sp"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimaryDark"
                        android:layout_marginTop="24dp"/>
                    <Button
                        android:id="@+id/activity_upload_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimaryDark"
                        android:layout_marginTop="24dp"/>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

