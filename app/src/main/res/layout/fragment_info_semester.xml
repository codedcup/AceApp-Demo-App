<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.common.UserTypeActivity">

    <TextView
        android:id="@+id/fragment_info_semester_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Semester"
        android:textColor="@color/white"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="24dp"
        android:textSize="36sp"
        android:layout_marginStart="24dp" />

    <LinearLayout
        android:id="@+id/fragment_info_semester_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_info_semester_text"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_info_semester_sem1_layout"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5th"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    tools:ignore="UnusedAttribute" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_info_semester_sem2_layout"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6th"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    tools:ignore="UnusedAttribute"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>